<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" label="Login"
  xmlns:rcomponents="org.ruboss.components.*">
<mx:Script><![CDATA[
  import org.ruboss.Ruboss;

  import <%= base_package %>.controllers.<%= project_name %>Events;
  import com.pomodo.utils.CairngormUtils;

  import com.pomodo.validators.ServerErrors;

  [Bindable]
  
  private function sendData(eventType:String):void {

	CairngormUtils.dispatchEvent(eventType, {login: loginTI.text, password: passwordTI.text});
  }

]]></mx:Script>
  <mx:Form labelWidth="150">
    <mx:FormItem required="true" label="Username">
        <mx:TextInput id="loginTI"/>
    </mx:FormItem>
    <mx:FormItem required="true" label="Password">
        <mx:TextInput id="passwordTI"
            displayAsPassword="true"/>
    </mx:FormItem>
    <mx:FormItem>
        <mx:Button id="loginButton" label="Login"
            click="sendData(<%= project_name %>Events.CREATE_SESSION)"/>
    </mx:FormItem>
  </mx:Form>
</mx:VBox>