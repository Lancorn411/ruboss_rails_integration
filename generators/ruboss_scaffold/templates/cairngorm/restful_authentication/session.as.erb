package <%= base_package %>.models {
  [Resource(controller="<%= ruboss_controller_name %>")]
  [Bindable]
  public class <%= class_name %> {
    public static const LABEL_FIELD:String = "<%= label_field %>";

    /**
     * "null object" for <%= class_name %>.
     */
    public static const NONE:<%= class_name %> = new <%= class_name %>(<%= label_field_default %>);

    /**
     * id of the model, this is an internal id used as the primary key.
     */
    public var id:int;
	
    public var login:String;
    
    public var email:String;
    
    public var firstName:String;
    
    public var lastName:String;
    
    public var password:String;//to create user

    /**
     * Constructor.
     * By convention, the first parameter is the LABEL_FIELD.
     */
    public function <%= class_name %>(
		login:String = "",
    	email:String = "",
    	firstName:String = "",
    	lastName:String = "",
    	password:String = "",
    	id:int = 0)
 	{
    	this.login = login;
    	this.email = email;
    	this.firstName = firstName;
    	this.lastName = lastName;
    	this.password = password;
    	this.id = id;
    }

	/**
     * Clones this object
     */
    public function clone():<%= class_name %> {
    	var cloned:<%= class_name %> = new <%=class_name %>();
		cloned.login = login;
		cloned.email = email;
		cloned.firstName = firstName;
		cloned.lastName = lastName;
		cloned.password = password;
    	cloned.id = id;
    	return cloned;
    }
    
    /**
     * Default toString implementation
     */
    public function toString():String {
      return this[LABEL_FIELD].toString();
    }
  }
}
